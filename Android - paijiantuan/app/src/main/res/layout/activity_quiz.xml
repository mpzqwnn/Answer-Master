        <!-- 题目区域 - 降低高度以显示更多信息流广告 -->
        <LinearLayout
            android:id="@+id/question_area_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center">

            <!-- 题目内容 - 使用相对宽度而不是固定宽度 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:maxWidth="400dp"
                android:orientation="vertical"
                android:paddingLeft="24dp"
                android:paddingRight="24dp">

                <TextView
                    android:id="@+id/question_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.25"
                    android:background="@drawable/question_frame_new_bg"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="电子计算机发明于哪一年？"
                    android:textColor="@android:color/black"
                    android:textSize="22sp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="16sp"
                    android:autoSizeMaxTextSize="22sp"
                    android:autoSizeStepGranularity="1sp" 
                    android:minHeight="60dp" />

                <TextView
                    android:id="@+id/question_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/question_title_new_bg_with_border"
                    android:gravity="center"
                    android:paddingLeft="24dp"
                    android:paddingTop="8dp"
                    android:paddingRight="24dp"
                    android:paddingBottom="8dp"
                    android:text="请选择正确答案"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeMaxTextSize="16sp"
                    android:autoSizeStepGranularity="1sp" 
                    android:minWidth="160dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.55"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!-- 关卡和体力信息 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginBottom="12dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/level_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/ad_button_fresh_bg"
                            android:text="关卡:1"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:padding="8dp"
                            android:minHeight="40dp"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="12sp"
                            android:autoSizeMaxTextSize="16sp"
                            android:autoSizeStepGranularity="1sp" />

                        <Button
                            android:id="@+id/lives_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/ad_button_fresh_bg"
                            android:text="体力:0"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:padding="8dp"
                            android:minHeight="40dp"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="12sp"
                            android:autoSizeMaxTextSize="16sp"
                            android:autoSizeStepGranularity="1sp" />
                    </LinearLayout>

                    <!-- 选项按钮容器 - 使用权重布局确保两个按钮大小一致 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">
                        
                        <Button
                            android:id="@+id/option1_button"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginRight="6dp"
                            android:background="@drawable/button_fresh_bg"
                            app:backgroundTint="@null"
                            android:text="1800年"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:padding="8dp"
                            android:gravity="center"
                            android:maxLines="2"
                            android:ellipsize="none"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="10sp"
                            android:autoSizeMaxTextSize="14sp"
                            android:autoSizeStepGranularity="1sp" />
                    
                        <Button
                            android:id="@+id/option2_button"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="6dp"
                            android:background="@drawable/button_fresh_bg"
                            app:backgroundTint="@null"
                            android:text="1946年"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:padding="8dp"
                            android:gravity="center"
                            android:maxLines="2"
                            android:ellipsize="none"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="10sp"
                            android:autoSizeMaxTextSize="14sp"
                            android:autoSizeStepGranularity="1sp" />
                    </LinearLayout>
                    
                    <!-- 新增的两个选项按钮 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        
                        <Button
                            android:id="@+id/option3_button"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginRight="6dp"
                            android:background="@drawable/button_fresh_bg"
                            app:backgroundTint="@null"
                            android:text="2000年"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:padding="8dp"
                            android:gravity="center"
                            android:maxLines="2"
                            android:ellipsize="none"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="10sp"
                            android:autoSizeMaxTextSize="14sp"
                            android:autoSizeStepGranularity="1sp" />
                    
                        <Button
                            android:id="@+id/option4_button"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="6dp"
                            android:background="@drawable/button_fresh_bg"
                            app:backgroundTint="@null"
                            android:text="2020年"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:padding="8dp"
                            android:gravity="center"
                            android:maxLines="2"
                            android:ellipsize="none"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMinTextSize="10sp"
                            android:autoSizeMaxTextSize="14sp"
                            android:autoSizeStepGranularity="1sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    
        <RelativeLayout
            android:id="@+id/loading_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:visibility="gone">
                
            <ProgressBar
                android:id="@+id/loading_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:indeterminateTint="@android:color/white"
                android:indeterminateTintMode="src_in" />
                
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/loading_progress"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="正在加载中..."
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </RelativeLayout>

        <!-- 信息流广告容器 - 增加高度以显示更多内容 -->
        <LinearLayout
            android:id="@+id/native_ad_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:orientation="vertical"
            android:padding="0dp"
            android:layout_marginTop="10dp"
            android:clipToPadding="true"
            android:gravity="fill">
        </LinearLayout>
    </LinearLayout>
    
    <!-- 邀约风控弹窗 -->
    <RelativeLayout
        android:id="@+id/invitation_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone"
        android:elevation="10dp"
        android:gravity="center">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/orange_gradient_bg"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">
            
            <TextView
                android:id="@+id/invitation_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="邀约通知"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="16dp" />
            
            <TextView
                android:id="@+id/invitation_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="用户5，恭喜您获得续做任务的机会，激励不变，请截此图后，到（乐助客）领取续做任务。"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp" />
            
            <Button
                android:id="@+id/invitation_confirm_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="已确认截图，关闭"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:padding="12dp"
                android:textAllCaps="false" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>