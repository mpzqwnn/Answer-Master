        <!-- 顶部用户信息和状态栏 -->
        <LinearLayout
            android:id="@+id/top_user_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">
            
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                
                <ImageView
                    android:id="@+id/avatar_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/avatar_placeholder"
                    android:background="@drawable/avatar_border"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="showSettingsPopup" />
                    
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/avatar_image"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:orientation="vertical">
                    
                    <TextView
                        android:id="@+id/user_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用户名"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="10sp"
                        android:autoSizeMaxTextSize="14sp"
                        android:autoSizeStepGranularity="1sp" />

                    <TextView
                        android:id="@+id/user_mobile_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#FFBBBBBB"
                        android:textSize="12sp"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="8sp"
                        android:autoSizeMaxTextSize="12sp"
                        android:autoSizeStepGranularity="1sp" />
                </LinearLayout>
            </RelativeLayout>
            
            <!-- 音乐按钮区域 -->
            <FrameLayout
                android:layout_width="32dp"
                android:layout_height="32dp">
                
                <!-- 音乐按钮 - 保持原始大小 -->
                <ToggleButton
                        android:id="@+id/music_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/music_button_fresh_selector"
                        android:gravity="center"
                        android:textOn=""
                        android:textOff="" 
                        android:stateListAnimator="@anim/music_button_elevation"/>
                
                <!-- 音乐符号 - 确保常态下可见，点击时添加动画 -->
                <TextView
                    android:id="@+id/music_note"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="♫"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:elevation="8dp"
                    android:visibility="visible"/>
            </FrameLayout>
                
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical">

                <Button
                        android:id="@+id/watch_ad_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="获取 +"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/ad_button_fresh_bg"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:minWidth="80dp"
                        android:minHeight="36dp"
                        android:autoSizeTextType="uniform"
                        android:autoSizeMinTextSize="10sp"
                        android:autoSizeMaxTextSize="14sp"
                        android:enabled="false"
                        android:autoSizeStepGranularity="1sp" />
                    
                <TextView
                    android:id="@+id/lives_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今日答题: 0题 历史答题: 0题"
                    android:textColor="#FFBBBBBB"
                    android:layout_marginTop="4dp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMinTextSize="8sp"
                    android:autoSizeMaxTextSize="10sp"
                    android:autoSizeStepGranularity="1sp" />
            </LinearLayout>
        </LinearLayout>

            <!-- 在题目区域上方添加任务提示 -->
        <!-- <TextView
            android:id="@+id/task_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/orange_gradient_end"
            android:padding="12dp"
            android:text="今日任务：再答对3题可领取双倍奖励"
            android:textColor="@color/white"
