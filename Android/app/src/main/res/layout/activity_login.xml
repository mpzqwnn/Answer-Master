<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange_gradient_end"
    tools:context=".LoginActivity">

    <!-- 包含通用背景装饰 -->
    <include layout="@layout/include_background_decorations" />

    <!-- 标题区域 - 改进为更灵活的布局 -->

    <!-- 包含通用防沉迷提示 - 移到协议区域之前 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="648dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="60dp"
        android:orientation="vertical"
        android:paddingHorizontal="40dp"
        android:paddingTop="40dp"
        android:paddingBottom="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:text="答题大师"
            android:textColor="@color/warning_color"
            android:textSize="40sp"
            android:textStyle="bold" />

        <!-- <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:text="拍剪团"
            android:textColor="@color/warning_color"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:shadowColor="@color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3"
            android:text="答题大师"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold" /> -->

        <!-- 微信登录按钮 - 使用比重而不是固定marginTop -->
        <!-- 手机号输入框 -->
        <EditText
            android:id="@+id/phone_edittext"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext_bg"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingHorizontal="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="18sp" />

        <!-- 验证码输入区域 - 优化布局 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <!-- 验证码输入框 -->
            <EditText
                android:id="@+id/captcha_edittext"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/edittext_bg"
                android:hint="请输入图形验证码"
                android:inputType="text"
                android:maxLength="6"
                android:paddingHorizontal="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="18sp" />

            <!-- 验证码图片 - 可点击刷新 -->
            <ImageView
                android:id="@+id/captcha_imageview"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_bg"
                android:clickable="true"
                android:contentDescription="点击刷新图形验证码"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:padding="8dp"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <!-- 登录按钮 - 现代化设计 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/next_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/login_button_modern_gradient" />

        <!-- 原有设备登录按钮，暂时隐藏 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/wechat_login_button"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="@dimen/login_button_margin_top"
            android:background="@drawable/wechat_login_button_fresh_bg"
            android:drawableLeft="@drawable/wechat_logo"
            android:drawablePadding="16dp"
            android:gravity="center_vertical|center_horizontal"
            android:paddingHorizontal="32dp"
            android:text="使用设备登录"
            android:textColor="#07C160"
            android:textSize="22sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

    <include
        android:id="@+id/anti_addiction_container"
        layout="@layout/include_anti_addiction" />

    <!-- 底部协议区域 - 现代化设计 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:layout_above="@id/anti_addiction_container"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/agreement_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:checked="false"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我已经详细地阅读并同意"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/user_agreement_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:text="《用户许可协议》"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="和"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/privacy_agreement_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:text="《隐私政策》"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:alpha="0.8"
            android:text="登录即表示您同意我们收集必要信息以提供服务"
            android:textColor="@color/white"
            android:layout_marginBottom="40dp"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>