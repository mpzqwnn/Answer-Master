<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <!-- 弹窗容器 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@drawable/settings_card_bg"
        android:elevation="10dp"
        android:maxWidth="400dp"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- 添加ScrollView来包裹整个内容区域，使其可以滚动 -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <!-- 头像和用户基本信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- 圆形头像 -->
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/settings_item_bg"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/avatar_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/settings_item_bg"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_avatar" />
            </LinearLayout>

            <!-- 版本信息 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="版本号：3.18 DS10.16-1更新"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <!-- 个人信息两列布局 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                        android:background="@drawable/settings_item_bg"
                        android:orientation="horizontal"
                android:paddingVertical="12dp">

                        <TextView
                    android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="昵称:"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/nickname_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="繁花"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

            <!-- 角色ID信息 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/settings_item_bg"
                        android:orientation="horizontal"
                android:paddingVertical="12dp">

                        <TextView
                    android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="角色ID:"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/role_id_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2582111002"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

            <!-- 注册时间信息 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/settings_item_bg"
                android:orientation="horizontal"
                android:paddingVertical="12dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="注册时间:"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/register_time_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2025/08/21 16:12:36"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

                    <!-- 登录时间信息 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/settings_item_bg"
                        android:orientation="horizontal"
                android:paddingVertical="12dp">

                        <TextView
                    android:layout_width="100dp"
                            android:layout_height="wrap_content"
                    android:text="登录时间:"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/login_time_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                    android:text="2025/08/21 16:12:36"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

            <!-- 答题统计信息 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">

                <TextView
                    android:id="@+id/today_correct_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="今日答对: 3题"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/today_total_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="今日答题: 5题"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- 答题历史记录区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/settings_item_bg"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="记录"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- 设置固定高度以支持滚动 -->
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:padding="5dp"
                    android:scrollbars="vertical">

                    <!-- 答题历史记录列表 -->
                    <LinearLayout
                        android:id="@+id/history_list_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- 这里将通过代码动态添加历史记录 -->
                        <!-- 示例数据 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="right|center_vertical"
                            android:paddingVertical="4dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="5: 2025/08/21 16:37:48"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="8dp"
                                android:gravity="center"
                                android:background="@drawable/correct_answer_bg"
                                android:text="√"
                                android:textColor="@color/white"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="right|center_vertical"
                            android:paddingVertical="4dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="4: 2025/08/21 16:34:50"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginLeft="8dp"
                                android:gravity="center"
                                android:background="@drawable/wrong_answer_bg"
                                android:text="×"
                                android:textColor="@color/white"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <!-- 注销按钮 -->
        <!-- <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/settings_item_bg"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:id="@+id/user_agreement_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:padding="8dp"
                android:singleLine="true"
                android:text="《用户许可协议》"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/privacy_agreement_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="right"
                android:padding="8dp"
                android:singleLine="true"
                android:text="《隐私政策》"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center">
                
                <Button
                    android:id="@+id/logout_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/logout_button_bg"
                    android:text="注销账号"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout> -->
            </LinearLayout>
        </ScrollView>
        
        <!-- 倒计时和获取体力按钮区域 -->
        <LinearLayout
            android:id="@+id/countdown_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="15dp"
                android:visibility="gone" >
            
            <!-- 倒计时文本 -->
            <TextView
                android:id="@+id/countdown_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8秒后可获取体力"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginBottom="10dp"
                android:visibility="visible" />
            
            <!-- 获取体力按钮 -->
            <Button
                android:id="@+id/get_lives_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ad_button_fresh_bg"
                android:text="观看广告获取体力"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginHorizontal="20dp"
                android:padding="12dp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>